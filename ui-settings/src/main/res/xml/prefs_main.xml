<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="@string/prefs_category_appearance">

        <ListPreference
            android:defaultValue="@string/pref_theme_default_value"
            android:entries="@array/prefs_theme_titles"
            android:entryValues="@array/prefs_theme_values"
            android:key="pref_theme"
            android:title="@string/pref_theme_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/prefs_category_playback_options">
        <ListPreference
            android:defaultValue="@string/pref_reload_queue_track_value"
            android:entries="@array/pref_reload_queue_entries"
            android:entryValues="@array/prefs_reload_queue_values"
            android:key="reload_queue"
            android:title="@string/pref_title_reload_queue"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/action_dev_options"
        app:isPreferenceVisible="@bool/core_is_debug_enabled">

        <Preference
            android:key="audio_analysis"
            android:title="@string/pref_title_audio_analysis"
            android:summary="@string/pref_summary_audio_analysis">

            <intent android:action="fr.nihilus.music.actions.DEBUG_SPOTIFY" />
        </Preference>

        <Preference
            android:key="start_sync"
            android:title="@string/pref_title_spotify_sync"/>

    </PreferenceCategory>

</PreferenceScreen>