<resources>
    <!-- Request codes -->

    <!-- Request to start the activity associated with the MediaSession. -->
    <item name="abc_request_start_media_activity" type="id" />
    <!-- Request to delete tracks from the music library. -->
    <item name="abc_request_delete_tracks" type="id"/>
    <!-- Request to add a set of tracks to a playlist. -->
    <item name="abc_request_add_to_playlist" type="id"/>

    <!-- Result codes -->

    <!--
        Indicates that the command successfully completed.
        Every implementation of MediaSessionCommand should send this code upon success.
    -->
    <item name="abc_result_success" type="id" />

    <!-- Error codes -->

    <!--
        Indicates that an attempt to create a new playlist has failed because a playlist
        with the desired name already exists.
    -->
    <item name="abc_error_playlist_already_exists" type="id"/>
    <!-- Indicates that a command can't be handled because it is not supported. -->
    <item name="abc_error_unknown_command" type="id" />
</resources>