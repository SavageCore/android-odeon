<resources>
    <declare-styleable name="RangeSlider">
        <!-- The drawable resource used to draw the inactive portions of the slider. -->
        <attr name="trackDrawable" format="reference"/>
        <!-- The drawable resource used to draw the active portion of the slider. -->
        <attr name="progressDrawable" format="reference"/>
        <!-- The drawable resource used to draw the draggable thumbs. -->
        <attr name="thumbDrawable" format="reference"/>
        <!--
            The optional drawable resource used to draw tick marks onto the slider.
            Should be used only when accepting discrete values.
            -->
        <attr name="tickMarkDrawable" format="reference"/>
        <!--
            The minimum value of the range.
            Defaults to 0.0 if not specified.
            -->
        <attr name="minValue" format="float"/>
        <!--
            The maximum value of the range.
            This value should be greater than or equal to that of minValue.
            Defaults to 1.0 if not specified.
            -->
        <attr name="maxValue" format="float"/>
        <!--
            The interval between tick marks.
            This has a direct impact on the number of tick marks.
            For example, if lowerBound=0 and upperBound=1.0, a step of 0.1 will display 10 marks,
            while a step of 0.02 will show 20.
            -->
        <attr name="step" format="float"/>
        <!--
            The initial lower value of the range.
            This value should be included in the [minValue ; maxValue] interval
            and is clamped otherwise.
            Defaults to minValue if not specified.
            -->
        <attr name="lowerBound" format="float"/>
        <!--
            The initial upper value of the range.
            This value should be included in the [lowerBound ; maxValue] interval
            and is clamped otherwise.
            Defaults to maxValue if not specified.
            -->
        <attr name="upperBound" format="float"/>

        <attr name="android:enabled" format="boolean"/>
    </declare-styleable>
</resources>