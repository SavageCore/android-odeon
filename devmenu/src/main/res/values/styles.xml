<resources>

    <style name="Widget.Odeon.EditText.Number" parent="Widget.AppCompat.EditText">
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">3</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="Widget.Odeon.EditText.Number.Decimal">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="Widget.Odeon.TextView.Section" parent="">
        <item name="android:paddingTop">@dimen/grid_2</item>
        <item name="android:paddingBottom">@dimen/grid_1</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5
        </item>
    </style>

    <style name="Widget.Odeon.Cartridge" parent="">
        <item name="android:layout_marginStart">@dimen/grid_1</item>
        <item name="android:layout_marginTop">@dimen/grid_2</item>
        <item name="android:layout_marginBottom">@dimen/grid_2</item>
        <item name="android:layout_marginEnd">@dimen/grid_1</item>
        <item name="android:background">@drawable/dev_cartridge_shape</item>
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.Odeon.Subtitle2</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:elevation">2dp</item>
    </style>
</resources>