<resources>
    <!-- Action mode style to look lie Material specs -->
    <style name="Widget.Odeon.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?textAppearanceSubtitle1</item>
        <item name="background">@color/action_mode_background</item>
    </style>

    <!-- Style for PopupMenu that overlaps the anchor and supports Night Theme. -->
    <style name="Widget.Odeon.PopupMenu.Overflow" parent="Widget.MaterialComponents.PopupMenu.Overflow"/>

    <!-- Default style for ListView. -->
    <style name="Widget.Odeon.ListView" parent="Widget.AppCompat.ListView">
        <item name="android:divider">@null</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:nestedScrollingEnabled">true</item>
    </style>

    <!-- Default style for RecyclerView. Specify fast scroll thumb and track drawables. -->
    <style name="Widget.Odeon.RecyclerView" parent="android:Widget">
        <item name="fastScrollHorizontalThumbDrawable">?android:fastScrollThumbDrawable</item>
        <item name="fastScrollHorizontalTrackDrawable">?android:fastScrollTrackDrawable</item>
        <item name="fastScrollVerticalThumbDrawable">?android:fastScrollThumbDrawable</item>
        <item name="fastScrollVerticalTrackDrawable">?android:fastScrollTrackDrawable</item>
    </style>

    <!-- Customization of ListView's FastScroller -->
    <style name="Widget.Odeon.FastScroll" parent="android:Widget.Material.FastScroll">
        <item name="android:minWidth">124dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="Widget.Odeon.ScrollingView" parent="">
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.Odeon.List" parent="Widget.Odeon.ScrollingView">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Widget.Odeon.Grid" parent="Widget.Odeon.ScrollingView"/>

    <style name="Text.Odeon.Headline3" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Odeon.Headline3</item>
        <item name="firstBaselineToTopHeight">52sp</item>
        <item name="lastBaselineToBottomHeight">16sp</item>
    </style>

    <style name="Text.Odeon.Headline4" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Odeon.Headline4</item>
        <item name="firstBaselineToTopHeight">36sp</item>
        <item name="lastBaselineToBottomHeight">12sp</item>
    </style>

    <style name="Text.Odeon.Headline5" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Odeon.Headline5</item>
        <item name="firstBaselineToTopHeight">28sp</item>
        <item name="lastBaselineToBottomHeight">8sp</item>
    </style>

    <style name="Text.Odeon.Headline6" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Odeon.Headline6</item>
        <item name="firstBaselineToTopHeight">24sp</item>
        <item name="lastBaselineToBottomHeight">8sp</item>
    </style>

    <style name="Text.Odeon.Subtitle1" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Odeon.Subtitle1</item>
        <item name="firstBaselineToTopHeight">20sp</item>
        <item name="lastBaselineToBottomHeight">8sp</item>
    </style>

    <style name="Text.Odeon.Subtitle2" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Odeon.Subtitle2</item>
        <item name="firstBaselineToTopHeight">16sp</item>
        <item name="lastBaselineToBottomHeight">4sp</item>
    </style>

    <style name="Text.Odeon.Button" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Odeon.Button</item>
        <item name="firstBaselineToTopHeight">16sp</item>
        <item name="lastBaselineToBottomHeight">4sp</item>
    </style>

    <style name="Text.Odeon.Body1" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Odeon.Body1</item>
        <item name="firstBaselineToTopHeight">20sp</item>
        <item name="lastBaselineToBottomHeight">8sp</item>
    </style>

    <style name="Text.Odeon.Body2" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Odeon.Body2</item>
        <item name="firstBaselineToTopHeight">16sp</item>
        <item name="lastBaselineToBottomHeight">4sp</item>
    </style>

    <style name="Text.Odeon.Caption" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Odeon.Caption</item>
        <item name="firstBaselineToTopHeight">12sp</item>
        <item name="lastBaselineToBottomHeight">4sp</item>
    </style>

    <style name="Text.Odeon.Overline" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Odeon.Overline</item>
        <item name="firstBaselineToTopHeight">12sp</item>
        <item name="lastBaselineToBottomHeight">4sp</item>
    </style>

</resources>