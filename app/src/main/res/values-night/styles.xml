<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Base.AppTheme">
        <item name="colorPrimary">@color/mtrl_grey_900</item>
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="colorAccent">@color/mtrl_blue_a200</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.NoActionBar.Neutral">
        <item name="colorPrimary">@color/cardview_dark_background</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="colorControlActivated">@color/mtrl_blue_a200</item>
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay.Neutral</item>
    </style>

    <style name="AppTheme.DialogWhenLarge" parent="Theme.AppCompat.DayNight.DialogWhenLarge">
        <!-- colorPrimary, colorAccent... ne sont pas définies pour ce thème -->
        <item name="colorAccent">@color/mtrl_blue_a200</item>
    </style>

</resources>