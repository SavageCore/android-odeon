<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Base.AppTheme">
        <item name="colorPrimary">@color/mtrl_deeppurple_300</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/mtrl_blue_a100</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/mtrl_grey_900</item>
    </style>

    <style name="AppTheme.DialogWhenLarge" parent="Base.AppTheme.DialogWhenLarge">
        <item name="colorAccent">@color/mtrl_blue_a100</item>
    </style>

    <style name="AppTheme.AppBarOverlay.Colored">
        <!-- White text color when action bar is dark, which is the theme's default -->
    </style>

</resources>