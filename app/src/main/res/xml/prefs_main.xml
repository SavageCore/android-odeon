<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/prefs_category_appearance">

        <ListPreference
            android:defaultValue="system"
            android:entries="@array/prefs_night_mode_titles"
            android:entryValues="@array/prefs_night_mode_values"
            android:summary="%s"
            android:key="@string/pref_night_mode"
            android:title="@string/night_mode"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_behavior">

        <ListPreference
            android:defaultValue="@string/pref_default_startup_screen"
            android:entries="@array/pref_entries_home_screen"
            android:entryValues="@array/pref_values_home_screen"
            android:title="@string/pref_title_startup_screen"
            android:key="@string/pref_startup_screen"
            android:summary="%s" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_experimental">

        <SwitchPreference
            android:key="@string/pref_skip_silence"
            android:title="@string/pref_title_skip_silence"
            android:summary="@string/pref_summary_skip_silence"
            android:defaultValue="@bool/pref_default_skip_silence"/>
    </PreferenceCategory>
</PreferenceScreen>