<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
      - Pointer to the base theme used for both Light and Night.
      - Override this theme to apply API-level specific customizations.
      -->
    <style name="Base.AppTheme" parent="Base.V21.AppTheme"/>

    <style name="Base.V21.AppTheme" parent="@style/Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="actionBarPopupTheme">@style/AppTheme.PopupOverlay</item>

        <!-- Styling ActionMode to look like Material Design Specs -->
        <item name="actionModeBackground">@color/mtrl_deeppurple_300</item>
        <item name="actionModeCloseDrawable" tools:ignore="PrivateResource">
            @drawable/abc_ic_clear_material
        </item>

        <!-- Make the action mode appear above the content instead of above the Toolbar. -->
        <item name="windowActionModeOverlay">true</item>

        <!-- Enable window content transition -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <!-- The default theme for the whole application. -->
    <style name="AppTheme" parent="Base.AppTheme"/>

    <!--
      - Extension of the default theme that removes the decor ActionBar.
      - This allows using Toolbar in XML layouts.
      -->
    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView.ActionBar</item>
        <item name="colorPrimary">@color/mtrl_grey_100</item>
    </style>

    <!-- Toolbar theme variant that has colored title text and icons -->
    <style name="AppTheme.AppBarOverlay.Colored">
        <item name="android:textColorPrimary">@color/mtrl_deeppurple_a400</item>
        <item name="android:textColorSecondary">@color/mtrl_deeppurple_a400</item>
    </style>

    <!-- Style for SeekBar that removes horizontal padding. -->
    <style name="Widget.AppTheme.SeekBar.FullWidth" parent="Widget.AppCompat.SeekBar">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="Widget.AppTheme.CardView" parent="Base.CardView">
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardMaxElevation">@dimen/card_max_elevation</item>
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Widget.AppTheme.CardView.Animated">
        <item name="android:stateListAnimator">@animator/card_state_list</item>
    </style>

    <style name="AppTheme.FileViewer" parent="Theme.AppCompat.DayNight.Dialog.MinWidth">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/mtrl_deeppurple_500</item>
        <item name="colorAccent">@color/mtrl_blue_a400</item>
    </style>

    <!-- Enables fast scrolling on RecyclerView with theme's default thumb and track -->
    <style name="FastScrollRecyclerView">
        <item name="fastScrollEnabled">true</item>
        <item name="fastScrollHorizontalThumbDrawable">?android:fastScrollThumbDrawable</item>
        <item name="fastScrollHorizontalTrackDrawable">?android:fastScrollTrackDrawable</item>
        <item name="fastScrollVerticalThumbDrawable">?android:fastScrollThumbDrawable</item>
        <item name="fastScrollVerticalTrackDrawable">?android:fastScrollTrackDrawable</item>
    </style>
</resources>
