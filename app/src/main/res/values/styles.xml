<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.AppTheme" parent="@style/Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/mtrl_red_500</item>
        <item name="colorPrimaryDark">@color/mtrl_red_700</item>
        <item name="colorAccent">@color/mtrl_blue_a400</item>

        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="actionBarPopupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <!-- Styling ActionMode to look like Material Design Specs -->
        <item name="actionModeCloseDrawable" tools:ignore="PrivateResource">
            @drawable/abc_ic_clear_material
        </item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?colorControlActivated</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar.Neutral">
        <item name="colorPrimary">?android:attr/colorBackground</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlActivated">@color/mtrl_blue_a400</item>
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay.Neutral</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView.ActionBar</item>
    </style>

    <style name="AppTheme.AppBarOverlay.Neutral" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Widget.AppTheme.ProgressBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:minHeight">0dp</item>
        <item name="android:progressDrawable">@drawable/my_seekbar_track</item>
        <item name="android:thumb">@drawable/my_seekbar_thumb</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
    </style>

    <style name="Base.Widget.AppTheme.CardView" parent="Base.CardView">
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardMaxElevation">@dimen/card_max_elevation</item>
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Widget.AppTheme.CardView" parent="Base.Widget.AppTheme.CardView"/>

    <style name="AppTheme.DialogWhenLarge" parent="Theme.AppCompat.DayNight.DialogWhenLarge">
        <!-- colorPrimary, colorAccent... ne sont pas définies pour ce thème -->
        <item name="colorAccent">@color/mtrl_blue_a400</item>
    </style>

</resources>
