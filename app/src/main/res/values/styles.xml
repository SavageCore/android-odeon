<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.AppTheme" parent="@style/Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="actionBarPopupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <!-- Styling ActionMode to look like Material Design Specs -->
        <item name="actionModeCloseDrawable" tools:ignore="PrivateResource">
            @drawable/abc_ic_clear_material
        </item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?colorControlActivated</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView.ActionBar</item>
        <item name="colorPrimary">@color/mtrl_grey_100</item>
    </style>

    <!-- Toolbar theme variant that has colored title text and icons -->
    <style name="AppTheme.AppBarOverlay.Colored">
        <item name="android:textColorPrimary">@color/mtrl_deeppurple_500</item>
        <item name="android:textColorSecondary">@color/mtrl_deeppurple_500</item>
    </style>

    <style name="Widget.AppTheme.ProgressBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
    </style>

    <style name="Widget.AppTheme.CardView" parent="Base.CardView">
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardMaxElevation">@dimen/card_max_elevation</item>
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Widget.AppTheme.CardView.Animated">
        <!-- Animation is available for API 21+ -->
    </style>

    <style name="Base.AppTheme.DialogWhenLarge" parent="Theme.AppCompat.DayNight.DialogWhenLarge">
        <item name="colorAccent">@color/mtrl_blue_a400</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="AppTheme.DialogWhenLarge" parent="Base.AppTheme.DialogWhenLarge"/>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <style name="AppTheme.FileViewer" parent="Theme.AppCompat.DayNight.Dialog.MinWidth">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/mtrl_deeppurple_500</item>
        <item name="colorAccent">@color/mtrl_blue_a400</item>
    </style>
</resources>
