<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/main_graph"
            app:startDestination="@id/fragment_home">

    <fragment
        android:id="@+id/fragment_home"
        android:name="fr.nihilus.music.library.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/browse_album_detail"
            app:destination="@id/fragment_album_detail"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action
            android:id="@+id/browse_artist_detail"
            app:destination="@id/fragment_artist_detail"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action
            android:id="@+id/browse_playlist_content"
            app:destination="@id/fragment_playlist_detail"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action
            android:id="@+id/start_cleanup"
            app:destination="@id/fragment_cleanup"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/fragment_album_detail"
        android:name="fr.nihilus.music.library.albums.AlbumDetailFragment"
        android:label="fragment_album_detail"
        tools:layout="@layout/fragment_album_detail">
        <argument
            android:name="pickedAlbum"
            app:argType="android.support.v4.media.MediaBrowserCompat$MediaItem"/>
        <argument
            android:name="albumPalette"
            app:argType="fr.nihilus.music.library.albums.AlbumPalette"
            app:nullable="true"/>
    </fragment>

    <fragment
        android:id="@+id/fragment_artist_detail"
        android:name="fr.nihilus.music.library.artists.detail.ArtistDetailFragment"
        tools:layout="@layout/fragment_artist_detail">

        <argument
            android:name="pickedArtist"
            app:argType="android.support.v4.media.MediaBrowserCompat$MediaItem"/>
        <action
            android:id="@+id/browse_artist_album"
            app:destination="@id/fragment_album_detail"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>

    <fragment
        android:id="@+id/fragment_playlist_detail"
        android:name="fr.nihilus.music.library.playlists.MembersFragment"
        tools:layout="@layout/fragment_playlist_members">

        <argument
            android:name="playlist"
            app:argType="android.support.v4.media.MediaBrowserCompat$MediaItem"/>
        <argument
            android:name="isDeletable"
            android:defaultValue="false"
            app:argType="boolean"/>
    </fragment>

    <activity
        android:id="@+id/activity_settings"
        android:name="fr.nihilus.music.settings.SettingsActivity"
        android:label="@string/action_settings"
        tools:layout="@layout/activity_settings"/>

    <fragment
        android:id="@+id/fragment_cleanup"
        android:name="fr.nihilus.music.library.cleanup.CleanupFragment"
        android:label="@string/action_cleanup"
        tools:layout="@layout/fragment_cleanup"/>

</navigation>