<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorBackgroundFloating"
    tools:ignore="Overdraw">

    <RelativeLayout
        android:id="@+id/playbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/playerview_height">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="@dimen/playerview_height"
            android:layout_height="match_parent"
            android:contentDescription="@string/album_art"
            tools:src="@android:color/black"/>

        <fr.nihilus.music.view.AutoUpdateSeekBar
            android:id="@+id/progress"
            style="@style/Widget.AppTheme.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cover"
            android:layout_toEndOf="@id/cover"
            android:layout_toRightOf="@id/cover"
            android:paddingBottom="4dp"
            tools:progress="100"/>

        <LinearLayout
            android:id="@+id/textContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/progress"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/cover"
            android:layout_toLeftOf="@+id/btn_play_pause"
            android:layout_toRightOf="@+id/cover"
            android:layout_toStartOf="@+id/btn_play_pause"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:showIn="@layout/view_player">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                tools:text="Title de la chanson"/>

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="?android:attr/textColorTertiary"
                tools:text="Nom de l'artiste"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_play_pause"
            android:layout_width="@dimen/playerview_height"
            android:layout_height="@dimen/playerview_icon_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:layout_marginBottom="@dimen/play_icon_margin"
            android:layout_marginTop="@dimen/play_icon_margin"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/play_or_pause"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/level_play_pause"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/bigArt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonBar"
        android:layout_below="@id/playbar"
        android:contentDescription="@string/album_art"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_audiotrack_24dp"/>

    <LinearLayout
        android:id="@+id/buttonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- TODO Remplacer ça par un bouton, quand fonctionnalité viendra -->
        <android.support.v4.widget.Space
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:padding="16dp"/>

        <ImageView
            android:id="@+id/btn_previous"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="2"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/skip_previous"
            android:padding="8dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_skip_previous_24dp"/>

        <ImageView
            android:id="@+id/main_play_pause"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="2"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/play_or_pause"
            app:srcCompat="@drawable/level_play_pause_filled"/>

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="2"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/skip_next"
            android:padding="8dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_skip_next_24dp"/>

        <ImageView
            android:id="@+id/btn_random"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/action_random"
            android:padding="16dp"
            app:srcCompat="@drawable/ic_shuffle_24dp"/>
    </LinearLayout>

</RelativeLayout>