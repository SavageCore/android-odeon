<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorBackgroundFloating">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="@dimen/playerview_height"
        android:layout_height="@dimen/playerview_height"
        android:contentDescription="@string/album_art"
        tools:src="@android:color/black"/>

    <fr.nihilus.mymusic.view.AutoUpdateSeekBar
        android:id="@+id/progress"
        style="@style/Widget.AppTheme.ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cover"
        android:layout_toEndOf="@id/cover"
        android:layout_toRightOf="@id/cover"
        android:paddingBottom="4dp"
        tools:progress="100"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/playerview_height"
        android:layout_alignBottom="@id/cover"
        android:layout_below="@id/progress"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/cover"
        android:layout_toLeftOf="@+id/btn_play_pause"
        android:layout_toRightOf="@+id/cover"
        android:layout_toStartOf="@+id/btn_play_pause"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:text="Title de la chanson"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="?android:attr/textColorTertiary"
            tools:text="Nom de l'artiste"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_play_pause"
        android:layout_width="@dimen/playerview_height"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@string/play_or_pause"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/level_list_play_pause"/>

    <ImageView
        android:id="@+id/bigArt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cover"
        android:contentDescription="@string/album_art"
        android:scaleType="centerCrop"
        android:layout_above="@+id/buttonBar"
        tools:src="@drawable/dummy_album_art"/>

    <LinearLayout
        android:id="@+id/buttonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btn_previous"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/skip_previous"
            android:padding="8dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_skip_previous_24dp"/>

        <ImageView
            android:id="@+id/main_play_pause"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/play_or_pause"
            android:padding="8dp"
            app:srcCompat="@drawable/level_list_play_pause"/>

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/skip_next"
            android:padding="8dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_skip_next_24dp"/>
    </LinearLayout>

</RelativeLayout>