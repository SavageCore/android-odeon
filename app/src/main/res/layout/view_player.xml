<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorBackgroundFloating"
    tools:ignore="Overdraw">

    <!-- Top of the bottom sheet that appears when collapsed -->
    <android.support.constraint.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/playerview_height"/>

    <android.support.constraint.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"/>

    <android.support.constraint.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"/>

    <android.support.constraint.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="92dp"/>

    <include layout="@layout/view_player_top" />

    <ImageView
        android:id="@+id/bigArt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/album_art"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_audiotrack_24dp"
        app:layout_constraintTop_toTopOf="@+id/top_guideline"/>

    <!-- Progress bar -->
    <fr.nihilus.music.view.MediaSeekBar
        style="@style/Widget.AppTheme.ProgressBar"
        android:id="@+id/seekbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline"
        app:layout_constraintTop_toBottomOf="@id/bottom_guideline"
        tools:progress="100" />

    <TextView
        android:id="@+id/seek_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintTop_toBottomOf="@+id/bottom_guideline"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="11:42"
        android:textSize="12sp"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/seek_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintTop_toBottomOf="@+id/bottom_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="11:42"
        android:textSize="12sp"
        android:layout_margin="8dp" />

    <!-- Action buttons -->
    <ImageView
        android:id="@+id/btn_repeat"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@string/repeat"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_previous"
        app:layout_constraintRight_toLeftOf="@+id/btn_previous"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_level_repeat"
        app:layout_constraintLeft_toLeftOf="@+id/start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/seekbar"/>

    <ImageView
        android:id="@+id/btn_previous"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@string/skip_previous"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/main_play_pause"
        app:layout_constraintLeft_toRightOf="@+id/btn_repeat"
        app:layout_constraintRight_toLeftOf="@+id/main_play_pause"
        app:layout_constraintStart_toEndOf="@+id/btn_repeat"
        app:srcCompat="@drawable/ic_skip_previous_24dp"
        app:layout_constraintTop_toBottomOf="@+id/seekbar"/>

    <fr.nihilus.music.view.PlayPauseButton
        android:id="@+id/main_play_pause"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@string/play_or_pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_next"
        app:layout_constraintLeft_toRightOf="@+id/btn_previous"
        app:layout_constraintRight_toLeftOf="@+id/btn_next"
        app:layout_constraintStart_toEndOf="@+id/btn_previous"
        app:srcCompat="@drawable/level_play_pause_filled"
        app:layout_constraintTop_toBottomOf="@+id/seekbar"/>

    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@string/skip_next"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/main_play_pause"
        app:layout_constraintRight_toLeftOf="@+id/btn_shuffle"
        app:layout_constraintStart_toEndOf="@+id/main_play_pause"
        app:srcCompat="@drawable/ic_skip_next_24dp"
        app:layout_constraintTop_toBottomOf="@+id/seekbar"/>

    <ImageView
        android:id="@+id/btn_shuffle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@string/action_random"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_next"
        app:layout_constraintRight_toLeftOf="@+id/end_guideline"
        app:layout_constraintStart_toEndOf="@+id/btn_next"
        app:srcCompat="@drawable/ic_shuffle_24dp"
        app:layout_constraintTop_toBottomOf="@+id/seekbar"/>

</android.support.constraint.ConstraintLayout>